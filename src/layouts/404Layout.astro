---
import "@fontsource/bebas-neue";
import "@fonts/MYRIADPRO-REGULAR.woff";

import { getLangFromUrl } from "src/i18n/utils";

interface Props {
  title: string;
}

const { title } = Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Astro is a new kind of static site builder that delivers lightning-fast performance with a modern developer experience."
    />
    <meta name="author" content="Astro" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@_astrobuild" />
    <meta name="twitter:title" content="Astro" />
    <meta
      name="twitter:description"
      content="Astro is a new kind of static site builder that delivers lightning-fast performance with a modern developer experience."
    />
    <meta name="twitter:image" content="https://astro.build/twitter-card.jpg" />
    <meta property="og:title" content="Astro" />
    <meta
      property="og:description"
      content="Astro is a new kind of static site builder that delivers lightning-fast performance with a modern developer experience."
    />
    <meta property="og:image" content="https://astro.build/twitter-card.jpg" />
    <meta property="og:url" content="https://astro.build" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Astro" />
    <meta name="theme-color" content="#000000" />

    <title>{title}</title>
  </head>
  <body class="overflow-x-hidden">
    <slot />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
  }
  p,
  li,
  ul,
  input {
    font-family: "Myriad Pro", sans-serif;
  }

  body {
    font-family: "Bebas Neue", sans-serif;
  }
</style>
