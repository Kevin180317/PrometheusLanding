---
import { ClientRouter } from "astro:transitions";
import "@fontsource/bebas-neue";
import "@fonts/MYRIADPRO-REGULAR.woff";
import Header from "@Components/Header.astro";
import Footer from "@Components/Footer.astro";
import { getLangFromUrl } from "src/i18n/utils";
import LanguageModal from "@Components/LanguageModal";

interface Props {
  title: string;
  description: string;
  keywords: string;
}

const { title, description, keywords } = Astro.props;

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={Astro.url} />
    <meta name="description" content={description} />
    <meta name="author" content="PrometheusTij" />
    <meta name="keywords" content={keywords} />
    <meta name="robots" content="index, follow" />
    <meta name="publisher" content="PrometheusTij" />
    <meta property="og:title" content="Astro" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://prometheustij.com/ogImage.png" />
    <meta property="og:url" content="https://prometheustij.com/" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="https://prometheustij.com/" />
    <meta name="theme-color" content="#000000" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="overflow-x-hidden">
    <LanguageModal client:load />
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
    overflow-x: hidden;
  }
  p,
  li,
  ul,
  input,
  textarea {
    font-family: "Myriad Pro", sans-serif;
  }

  body {
    font-family: "Bebas Neue", sans-serif;
  }
</style>
