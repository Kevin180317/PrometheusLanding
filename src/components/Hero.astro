---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<main
  class="hero md:h-screen text-white flex justify-center px-16 items-start flex-col bg-cover bg-center bg-no-repeat"
>
  <h1 class="text-7xl mt-48 md:mt-0">
    {t("hero.title")}
  </h1>
  <p class="text-2xl mb-4 md:w-[700px]">
    {t("hero.subtitle")}
  </p>
  <a
    href="#contact"
    class="bg-blue-500 px-12 text-3xl py-4 uppercase hover:opacity-75 mb-8"
  >
    {t("hero.button")}
  </a>
</main>

<style>
  .hero {
    background-image: url("/background.png");
  }
</style>
