---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<main
  class="relative hero md:h-screen text-white flex justify-center px-16 items-start flex-col bg-cover bg-center bg-no-repeat"
  style="background-image: url('/Imagenes/6-2.png');"
>
  <div class="absolute inset-0 bg-black opacity-50"></div>
  <div class="relative z-10">
    <h1 class="text-7xl mt-48 md:mt-0">
      {t("hero.title")}
    </h1>
    <p class="text-2xl mb-8 md:w-[700px]">
      {t("hero.subtitle")}
    </p>
    <a
      href="#contact"
      title="Ir a contact"
      class="bg-[#39BAC8] px-12 text-3xl py-4 uppercase hover:opacity-75 mb-8"
    >
      {t("hero.button")}
    </a>
  </div>
</main>
