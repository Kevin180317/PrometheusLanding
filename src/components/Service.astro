---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const services = [
  {
    id: 1,
    title: t("service.web"),
    image: "/Imagenes/3.webp",
    href: "/prices",
  },
  {
    id: 2,
    title: t("service.prototypes"),
    image: "/Imagenes/4.jpg",
  },
  {
    id: 3,
    title: t("service.apps"),
    image: "/Imagenes/5.webp",
  },
];
---

<main class="md:h-screen text-white px-16 py-16 bg-[#39BAC8] service">
  <h1 class="text-7xl text-center mb-8">
    {t("service.title")}
  </h1>
  <p class="mb-8 text-2xl text-center">
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Nihil obcaecati,
    dolores fugiat suscipit amet maxime. Aliquam quasi deserunt assumenda
    cupiditate tenetur hic ex odit!
  </p>
  <div class="flex flex-col md:flex-row md:justify-between items-center gap-4">
    {
      services.map((index) => (
        <div>
          <img src={index.image} alt="" class="md:h-96" />
          <a
            href={index.href}
            class="flex justify-center items-center text-2xl bg-gray-800 text-white h-24"
          >
            {index.title}
          </a>
        </div>
      ))
    }
  </div>
</main>

<style>
  .service {
    background-image: url("/Fondos/5.webp");
    background-size: cover;
  }
</style>
