---
const work = [
  {
    id: 1,
    logo: "/basic.webp",
    title: "Basic",
    description: "lorem",
    price: 150.0,
  },
  {
    id: 2,
    logo: "/profesional.webp",
    title: "Profesional",
    description: "lorem",
    price: 200.0,
  },
  {
    id: 3,
    logo: "/ultimate.webp",
    title: "Ultimate",
    description: "lorem",
    price: 250.0,
  },
];
---

<main class="md:h-screen px-16 py-16 bg-[#AFAFAF]">
  <h1 class="text-6xl text-center mb-8">Queremos trabajar contigo</h1>
  <p class="text-2xl mb-12 text-center">
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Impedit, animi!
  </p>
  <div
    class="flex flex-col md:flex-row gap-4 md:justify-between items-center text-white"
  >
    {
      work.map((index) => (
        <div class="border border-black w-96 bg-blue-500 h-96 flex justify-center items-center flex-col gap-8 rounded-2xl">
          <img src={index.logo} alt="" />
          <h1 class="text-4xl mb-4">{index.title}</h1>
          <p class="text-2xl">{index.description}</p>
          <button class="text-white bg-black px-8 py-2 text-2xl hover:opacity-85">
            ${index.price}.00
          </button>
        </div>
      ))
    }
  </div>
</main>
