---
import Icons from "@Components/Icons";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const year = new Date().getFullYear();
---

<footer id="footer" class="bg-gray-800 p-4 text-white py-8">
  <div
    class="flex flex-col md:flex-row md:justify-between items-start md:items-start gap-4"
  >
    <div>
      <img
        src="/logofooter.webp"
        class="h-24 w-42"
        alt="Logo de Prometheustij"
        title="Logo de Prometheustij"
      />
      <p class="md:w-[80%] px-4">
        &copy; {year}
        {t("footer.copy")}
      </p>
      <Icons client:visible />
    </div>
    <div class="px-4 md:px-0">
      <h2 class="text-4xl">{t("footer.about")}</h2>
      <ul class="list-none">
        <!-- <li><a title={t("link.products")} href="/history" class="hover:underline">History</a></li>
        <li><a title={t("link.products")} href="/team" class="hover:underline">Our Team</a></li> -->
        <li>
          <a
            title={t("link.term")}
            href={t("link.term")}
            class="hover:underline">{t("footer.terms")}</a
          >
        </li>
        <li>
          <a
            title={t("link.policy")}
            href={t("link.policy")}
            class="hover:underline"
          >
            {t("footer.policy")}
          </a>
        </li>
      </ul>
    </div>
    <div class="px-4 md:px-0">
      <h2 class="text-4xl">
        {t("footer.services")}
      </h2>
      <ul class="list-none">
        <li>
          <a
            title={t("link.products")}
            href={t("link.products")}
            class="hover:underline">{t("footer.products")}</a
          >
        </li>
      </ul>
    </div>
    <div class="px-4 md:px-0">
      <h2 class="text-4xl">
        {t("footer.other")}
      </h2>
      <ul class="list-none">
        <li>
          <a
            title={t("link.contact")}
            href={t("link.contact")}
            class="hover:underline"
          >
            {t("footer.contact")}
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>
