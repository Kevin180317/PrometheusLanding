<main
  id="contact"
  class="h-screen bg-blue-300 flex justify-center items-center flex-col"
>
  <h1 class="text-6xl mb-8 font-bold text-white">CONTACTO</h1>
  <form>
    <div class="flex">
      <input
        class="p-2.5 px-8 py-3 border border-black focus:outline-none text-black"
        type="email"
        name="email"
        id="email"
        placeholder="Ingresa tu correo electronico"
      />
      <button
        type="submit"
        class="px-8 py-2 bg-black hover:opacity-85 text-white uppercase"
        >ENVIAR</button
      >
    </div>
  </form>
</main>
