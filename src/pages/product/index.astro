---
import Layout from "@Layouts/Layout.astro";
import Product from "@Components/product/Product";
import { getLangFromUrl, useTranslations } from "@src/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title="PrometheusTij || Producto - Servicios digitales innovadores"
  description="Descubre nuestros servicios de desarrollo digital, incluyendo la creación de webs, apps y prototipos a medida. Innovación y alto impacto en cada proyecto."
  keywords="producto, servicios digitales, desarrollo web, desarrollo de apps, prototipos digitales, innovación tecnológica, soluciones personalizadas, impacto digital, diseño web"
>
  <Product
    client:load
    AppDesc1={t("product.app.desc1")}
    AppDesc2={t("product.app.desc2")}
    PaliativosDesc={t("product.app.desc3")}
    WebDesc1={t("product.web.desc1")}
    WebDesc2={t("product.web.desc2")}
    WebDesc3={t("product.web.desc3")}
    WebDesc4={t("product.web.desc4")}
    WebDesc5={t("product.web.desc5")}
    WebDesc6={t("product.web.desc6")}
    ProtDesc1={t("product.prot.desc1")}
    ProtDesc2={t("product.prot.desc2")}
    CloseButton={t("button.close")}
    QuoteButton={t("button.quote")}
  />
</Layout>
