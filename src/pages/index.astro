---
import Layout from "@Layouts/Layout.astro";
import Hero from "@Components/Hero.astro";
import Service from "@Components/Service.astro";
// import Work from "@Components/Work.astro";
import Container from "@Components/Container.astro";
import Quote from "@Components/Quote.astro";
import About from "@Components/About.astro";
import Banner from "@Components/Banner.astro";
import Contact from "@Components/Contact";

import { getLangFromUrl, useTranslations } from "@src/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title="PrometheusTij || R&D - Innovando soluciones digitales"
  description="PrometheusTij es un equipo especializado en la creación de webs, apps y prototipos innovadores con un enfoque único en la alta calidad y el impacto digital. Desarrollamos soluciones personalizadas para transformar tu visión en realidad."
  keywords="PrometheusTij, desarrollo web, desarrollo de apps, prototipos digitales, innovación tecnológica, soluciones digitales personalizadas, impacto digital, diseño web, desarrollo de prototipos, equipo creativo digital"
>
  <Container>
    <Hero />
    <Service />
    <!-- <Work /> -->
    <Quote />
    <About />
    <Banner />
    <Contact
      client:load
      title={t("contact.title")}
      placeholder1={t("contact.placeholder1")}
      placeholder2={t("contact.placeholder2")}
      placeholder3={t("contact.placeholder3")}
      buttonText={t("contact.button")}
      buttonSending={t("contact.button.sending")}
      buttonError1={t("contact.button.error1")}
      buttonError2={t("contact.button.error2")}
      buttonSuccess={t("contact.button.success")}
    />
  </Container>
</Layout>
