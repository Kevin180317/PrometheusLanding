---
import Prices from "@Components/prices/Hero.astro";
import Product from "@Components/prices/Product";
import Layout from "@Layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "@src/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title="PrometheusTij || Web - Consulta nuestros paquetes personalizados"
  description="Consulta nuestras tarifas y paquetes personalizados para el desarrollo de webs, apps y prototipos innovadores. Soluciones a tu medida."
  keywords="precios, tarifas, PrometheusTij, desarrollo web, desarrollo de apps, precios personalizados, soluciones digitales, paquetes de desarrollo, innovación tecnológica"
>
  <Product
    client:load
    categoria="Web"
    WebDesc1={t("product.web.desc1")}
    WebDesc2={t("product.web.desc2")}
    WebDesc3={t("product.web.desc3")}
    WebDesc4={t("product.web.desc4")}
    WebDesc5={t("product.web.desc5")}
    WebDesc6={t("product.web.desc6")}
    CloseButton={t("button.close")}
    QuoteButton={t("button.quote")}
  />
  <!-- <Prices /> -->
</Layout>
