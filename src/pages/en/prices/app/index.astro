---
import Prices from "@Components/prices/Hero.astro";
import Product from "@Components/prices/Product";
import Layout from "@Layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "@src/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title="PrometheusTij || Apps - Explore Our Custom Packages"
  description="Check out our pricing and custom packages for web, app, and prototype development. Tailored solutions for your needs."
  keywords="prices, rates, PrometheusTij, web development, app development, custom pricing, digital solutions, development packages, technological innovation"
>
  <Product
    client:load
    categoria="App"
    AppDesc1={t("product.app.desc1")}
    AppDesc2={t("product.app.desc2")}
    CloseButton={t("button.close")}
    QuoteButton={t("button.quote")}
  />
  <!-- <Prices /> -->
</Layout>
