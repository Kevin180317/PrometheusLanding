---
import Layout from "@Layouts/Layout.astro";
import Hero from "@Components/Hero.astro";
import Service from "@Components/Service.astro";
// import Work from "@Components/Work.astro";
import Container from "@Components/Container.astro";
import Quote from "@Components/Quote.astro";
import About from "@Components/About.astro";
import Banner from "@Components/Banner.astro";
import Contact from "@Components/Contact";

import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title="PrometheusTij || R&D - Innovating Digital Solutions for the Future"
  description="PrometheusTij is a team specialized in creating innovative websites, apps, and prototypes with a unique focus on high quality and digital impact. We develop custom solutions to transform your vision into reality."
  keywords="PrometheusTij, web development, app development, digital prototypes, technological innovation, custom digital solutions, digital impact, web design, prototype development, creative digital team"
>
  <Container>
    <Hero />
    <Service />
    <!-- <Work /> -->
    <Quote />
    <About />
    <Banner />
    <Contact
      client:load
      title={t("contact.title")}
      placeholder1={t("contact.placeholder1")}
      placeholder2={t("contact.placeholder2")}
      placeholder3={t("contact.placeholder3")}
      buttonText={t("contact.button")}
      buttonSending={t("contact.button.sending")}
      buttonError1={t("contact.button.error1")}
      buttonError2={t("contact.button.error2")}
      buttonSuccess={t("contact.button.success")}
    />
  </Container>
</Layout>
